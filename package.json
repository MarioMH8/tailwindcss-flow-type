{
	"name": "tailwindcss-flow-type",
	"version": "0.0.1",
	"description": "A Tailwind CSS plugin for fluid, responsive typography that scales smoothly across screen sizes with minimal configuration.",
	"keywords": [
		"tailwindcss",
		"v4",
		"fluid",
		"typography"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MarioMH8/tailwindcss-flow-type.git"
	},
	"homepage": "https://github.com/MarioMH8/tailwindcss-flow-type",
	"bugs": {
		"url": "https://github.com/MarioMH8/tailwindcss-flow-type/issues"
	},
	"license": "MIT",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			},
			"default": "./dist/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prepublishOnly": "tsup",
		"test": "tsup && bun test",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"tailwindcss": "^4.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "2.29.6",
		"@hexadrop/eslint-config": "0.1.3",
		"@hexadrop/tsconfig": "0.0.5",
		"@tailwindcss/postcss": "4.1.12",
		"@types/bun": "1.2.13",
		"eslint": "9.26.0",
		"postcss": "8.5.6",
		"tailwindcss": "4.1.12",
		"tsup": "8.4.0",
		"typescript": "5.8.3"
	}
}
